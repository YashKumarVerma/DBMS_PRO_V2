  <section id="jumbo-page2">
      <div style="text-align: right; padding-right: 20px">
          <a href="/logout"><button type="submit" id="jb-btn" class="btn btn-primary">Logout</button></a>
      </div>
    <div class="jumbotron jumbotron-fluid" id="jb-m">
      <div class="container">
          <div class="row">
              <div class="col-md-8 col-sm-8">
                  <h1 class="display-4">Find Below the Available Cabs   </h1>
            </div>
                  <div class="col-md-4 col-sm-4">
                    <h1>Add a new cab to the database</h1>
                      <form action="/traindetails/request" method="POST">
                          <div class="form-row">
                            <div class="form-group col-md-6">
                              <label>Name</label>
                              <input type="name" class="form-control" placeholder="ex- KD. Singh" name="Username" required>
                            </div>
                            <div class="form-group col-md-6">
                              <label>Cab Price</label>
                              <input type="text" class="form-control" placeholder="ex-3000" name="dish_name" required>
                            </div>
                          </div>
      
                          <div class="form-row">
                            <div class="form-group col-md-6">
                              <label>WhatsApp number</label>
                              <input type="number" placeholder="ex-9090725488" class="form-control" name="carnumber">
                            </div>
                            <div class="form-group col-md-6">
                                    <label>Price per person</label>
                                    <input type="number" placeholder="ex-900" class="form-control" name="carnumber">
                                  </div>
                            </div>
                          <div class="form-row">
                            <div class="form-group col-md-6">
                              <label for="inputZip">Number of seats</label>
                              <input type="numbers" class="form-control" placeholder="6" name="wpnumber" required>
                            </div>
                            <div class="form-group col-md-6">
                              <label>Free Seats</label>
                              <input type="text" class="form-control" placeholder="3" name="station" required>
                            </div>  
                          </div>
                          <div class="form-row">
                                <div class="form-group col-md-6">
                                  <label for="inputZip">Date Of travel</label>
                                  <input type="date" class="form-control"  name="wpnumber" required>
                                </div>
                          </div>
                          
                          <div class="form-row">
                              <div class="form-group col-md-12 text-center">
                                  <button type="submit" id="jb-btn" class="btn btn-primary">Add your details</button>
                              </div>
                            </div>
                        </form>
                  </div>
